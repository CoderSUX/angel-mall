/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.block {
  width: 100%;
  height: 400rpx;
}

.section {
  width: 100%;
  height: 200rpx;
  border: 1px solid red;
}

.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.swiper-container {
  width: 750rpx;
  position: relative;
}

.swiper_box {
  width: 100%;
}

swiper-item image {
  width: 100%;
  display: inline-block;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
}

.type-navbar {
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.type-box {
  width: 160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}

.type-item-on {
  border-bottom: 4rpx solid #e64340;
}

.type-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
}

.img {
  width: 100%;
  height: 600rpx;
}

.swiper {
  height: 400rpx;
}

.notice {
  border: 4rpx solid #f5f5f5;
  margin-top: 30rpx;
  font-size: 26rpx;
  line-height: 80rpx;
}

.notice-gg {
  margin-left: 30rpx;
  color: #999;
}

.notice-lq {
  margin-left: 40rpx;
  color: red;
}

.goods-box {
  width: 100%;
  background-color: #f5f5f5;
}

.goods-content {
  width: 41%;
  height: 400rpx;
  background-color: #fff;
  display: inline-block;
    margin: 30rpx 30rpx 5rpx 35rpx;  
}

.ima {
  width: 100%;
  height: 280rpx;
}

.good-title {
  text-align: center;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.price {
  font-size: 24rpx;
  text-align: center;
  margin-top: 20rpx;
  color: red;
}
.goods-content:hover{
  transform: scale(0.9,1);
  transition-duration: 1s;
}
