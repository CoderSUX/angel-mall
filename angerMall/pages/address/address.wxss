/* pages/address/address.wxss */
page{
  background-color: #e7e7e7;
  height: 100%;
  overflow-y: hidden;
}
.box{
  width: 100%;
  height: 100%;
  background-color: #fff;
  margin-top: 40rpx;
}
.footer{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-top: 1px solid #e2e2e2;
  position: fixed;
  bottom: 0;
  font-size: 28rpx;
}
.jiantou{
  float: right;
  margin-right: 50rpx;
  color: #e3e3e3;
  font-weight: bold;
}
.plus{
  margin-left: 50rpx;
  margin-right: 50rpx;
  background: red;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  text-align: center;
  border-radius: 50%;
  display: inline-block;
  line-height: 40rpx;
}